<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AccountFragment"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_profilepic_grey_150dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/account_et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:text="Username"
        android:textColor="@color/actualWhite"
        android:background="@drawable/custom_profile_textbox"
        />

    <EditText
        android:id="@+id/account_et_shortDescription"
        android:layout_width="match_parent"
        android:gravity="top|left"
        android:layout_height="130dp"
        android:textSize="18sp"
        android:inputType="none"
        android:enabled="false"
        android:text="A short description about yourself"
        android:textColor="@color/actualWhite"
        android:background="@drawable/custom_profile_textbox"
        android:layout_margin="20dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/account_et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:inputType="none"
        android:text="Email"
        android:textColor="@color/actualWhite"
        android:background="@drawable/custom_profile_textbox"
        android:layout_margin="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/account_btn_logout"
        android:text="Log out"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>